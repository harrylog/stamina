{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Angular",
      "type": "chrome",
      "request": "launch",
      // Remove preLaunchTask temporarily to test
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/src/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    }
  ]
}