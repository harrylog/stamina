{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Auth Service",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug",
          "auth"
        ],
        "console": "integratedTerminal",
        "restart": true,
        "sourceMaps": true,
        "envFile": "${workspaceFolder}/.env",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Users Service",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug",
          "users"
        ],
        "console": "integratedTerminal",
        "restart": true,
        "sourceMaps": true,
        "envFile": "${workspaceFolder}/.env",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }